@model Masonry.Models.LogOnModel
@{
  ViewBag.Title = Strings.SignIn;
  Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>@Strings.SignIn</h2>
<p>
  @Html.Raw(string.Format(Strings.SignInNotes, @Html.ActionLink(Strings.SignInNotesRegister, "Register", new { area = "" }, null)))
</p>

@using (Html.BeginForm("Login", "Account", new { ReturnUrl = Request.QueryString["ReturnUrl"] }, FormMethod.Post, new { @class = "form-horizontal" }))
{
  @Html.AntiForgeryToken()
  @Html.ValidationSummary(true, "Log on was unsuccessful. Please correct the errors and try again.", new { @class = "alert alert-block alert-error" })
  <fieldset>
    <legend>@Strings.AccountInformation</legend>
    <div class="control-group">
      <div class="control-label">
        @Html.LabelFor(m => m.Account)
      </div>
      <div class="controls">
        <div class="input-prepend">
          <span class="add-on">@@</span>
          @Html.EditorFor(m => m.Account, new { @class = "required" })
        </div>
        @Html.ValidationMessageFor(m => m.Account)
      </div>
    </div>
    <div class="control-group">
      <div class="control-label">
        @Html.LabelFor(m => m.Password)
      </div>
      <div class="controls">
        <div class="input-prepend">
          <span class="add-on"><i class="icon-lock"></i></span>
          @Html.PasswordFor(m => m.Password, new { @class = "required" })
        </div>
        @Html.ValidationMessageFor(m => m.Password)
      </div>
    </div>
    <div class="control-group">
      <div class="control-label">
        @Html.LabelFor(m => m.RememberMe)
      </div>
      <div class="controls">
        @Html.CheckBoxFor(m => m.RememberMe)
      </div>
    </div>
    <div class="form-actions">
      <input type="submit" value="@Strings.SignInSubmit" class="btn btn-primary" />
    </div>
  </fieldset>
}
<script src="~/Scripts/jquery.validate.min.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
